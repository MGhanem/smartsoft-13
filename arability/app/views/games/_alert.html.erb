<div id="facebook_messages" class="alert alert-success">
    <button type = "button" class = "close" data-dismiss = "alert">&times;</button>
    <div> 
    	<%= @message %> 
    	<% if @redirect.present? %>
    	<a target="_blank" href="<%= @redirect %>"><%= t(:request_button) %></a> 
    	<% end %>
	</div>
</div>
<script type="text/javascript">
	setTimeout(function(){
		$("#facebook_messages").fadeOut(1000)
	}, 5000)
</script>