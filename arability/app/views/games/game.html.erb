  function setScoreTitle(){
    <% if I18n.locale==:ar %>
    document.getElementById('game-score').innerHTML = score + ' :نقاط'
    <% else %>
    document.getElementById('game-score').innerHTML = 'Score: ' + score;
    <% end %>
