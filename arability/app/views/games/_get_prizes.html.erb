<div class="award-zone" >
  <div class="won">
    <% if I18n.locale == :en %>
      <a class="pull-right btn btn-success" style="padding: 5px; margin-right: 12px; margin-top: 28px;" onclick="nextLevel()"><%= t(:to_next_level) %></a>
    <% else %>
      <a class="pull-left btn btn-success" style="padding: 5px; margin-left:28px; margin-top: 28px;" onclick="nextLevel()"><%= t(:to_next_level) %></a>
    <% end %>
    <h3 class="title-head"><%= t(:you_have_prizes) %></h3>
  </div>
  <div class="won">
     <% @won_prizes.each do |prize| %>
          <div class="award-new">
            <div class="award-image">
              <center>
                <img src="<%= prize.image %>" width="60" height="60"/>
              </center>
            </div>
            <div class="award-new-name">
              <%= prize.name %>
            </div>
            <div class="award-new-req">
              <%= t(:level) %> <%= prize.level %>
            </div>
            <div class="award-new-req">
              <%= t(:score) %> <%= prize.score %>
            </div>
          </div>
      <% end %>
</div>

