		<% rank = 0 %>
		<% @gamers.each do |user| %>
		<tr>
			<td><%= rank = rank + 1 %></td>
			<td><%= user.username %></td>
			<td><%= user.highest_score %></td>
			<% @Trophies = Gamers_Trophy.find_by_gamer_id(user.id) %>
			<td>
				<% if @Trophies.nil? %>
				<label>لا يوجد جوائز</label>
				<% else %>
				<%= @Trophies.trophy_id %>
				<% end %>
			</td>
		</tr>
		<br>
		<% end %>
	</tbody>
</table>
<% end %>