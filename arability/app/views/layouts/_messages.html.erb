<% flash.each do |key,msg| %>
  <div class="alert alert-<%= key %> row" id="err">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <% if msg.respond_to? "each" %>
        <div>
          <ul class="unstyled" id="err">
          <% msg.each do |item| %>
              <li><%= "#{item}" %></li>
          <% end %>
          </ul>
        </div>
      <% else %>
        <%= content_tag :div, msg.html_safe %>
      <% end %>
  </div>
<% end %>
<script type="text/javascript">
  var $element = $("#err")
  $element.css("position", "fixed");
  $element.css("border-style", "solid");
  $element.css("border-color", "black");
  $element.css("color", "black");
  $element.css("bottom", "25px");
  $element.css("left", "10%");
  $element.css("right", "10%");
  $element.css("z-index", "100");
  setTimeout(function(){
    $element.not(".alert-error").fadeOut(1000);
  }, 3000);

</script>
