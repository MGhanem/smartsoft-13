<% flash.each do |key,msg| %>
  <div class="alert alert-<%= key %> row" id="err">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <% if msg.respond_to? "each" %>
        <div>
          <ul class="unstyled" id="err">
          <% msg.each do |item| %>
              <li><%= "#{item}" %></li>
          <% end %>
          </ul>
        </div>
      <% else %>
        <%= content_tag :div, msg.html_safe %>
      <% end %>
  </div>
<% end %>
<script type="text/javascript">
  $("#err").css("position", "fixed");
  $("#err").css("top", "50px");
  $("#err").css("left", "10%");
  $("#err").css("right", "10%");
  $("#err").css("z-index", "100");
</script>
