<div class="container admin">
	<div class="row">
		<%= render partial: "sidebar-nav", locals: {active: "add-admin"} %>
		<div class="span9 offset3">
			<div class="tab-content">
				<div class="tab-pane well span7 active">
					<form class="form-horizontal" action="" method="post">
						<fieldset>
							<legend>
									إضافة مشرف جديدة
							</legend>
							<% if flash[:error] %>
								<div class="alert alert-error">
						    	<button type="button" class="close" data-dismiss="alert">&times;</button>
						    	<div>
						    		<%= flash[:error] %>
						    	</div>
						  	</div>
							<% end %>
							<input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token">
							<div class="control-group">
								<label class="control-label" for="inputkeyword">البريد الالكترونى</label>
								<div class="controls">
									<input type="text" id="inputkeyword" name="email" placeholder="البريد الالكترونى" class="span4">
									<button type="submit" class="btn btn-primary pull-left">إضافة المشرف</button>
								</div>
							</div>
						</fieldset>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>