<form class="form-horizontal" action="/admin/addprize" method="post" enctype="multipart/form-data">
	<fieldset>
		<legend>
			<a>
				إضافة جائزة جديدة
			</a>
		</legend>
		<input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token">
		<div class="control-group<%= flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:name]? ' error' : ''%>">
			<label class="control-label" for="inputName">إسم الجائزة</label>
			<div class="controls">
				<input type="text" id="inputName" placeholder="إسم الجائزة" name="name" value="<%= @fargs && @fargs[:addprize]? @fargs[:addprize][:name] : ''%>">
				<% if flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:name] %>
					<% flash[:error][:name].each do |er| %>
						<span class="help-block"><%= er %></span>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="control-group<%= flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:level]? ' error' : ''%>">
			<label class="control-label" for="inputScore">المستوى</label>
			<div class="controls">
				<input type="text" id="inputScore" placeholder="المستوى المطلوب للحصول على الجائزة" name="level" value="<%= @fargs && @fargs[:addprize]? @fargs[:addprize][:level] : ''%>">
				<% if flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:level] %>
					<% flash[:error][:level].each do |er| %>
						<span class="help-block"><%= er %></span>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="control-group<%= flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:score]? ' error' : ''%>">
			<label class="control-label" for="inputRank">مجموع النقاط</label>
			<div class="controls">
				<input type="text" id="inputRank" placeholder="مجموع النقاط المطلوب للحصول على الجائزة" name="score" value="<%= @fargs && @fargs[:addprize]? @fargs[:addprize][:score] : ''%>">
				<% if flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:score] %>
					<% flash[:error][:score].each do |er| %>
						<span class="help-block"><%= er %></span>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="control-group<%= flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:image]? ' error' : ''%>" data-provides="fileupload">
			<label class="control-label">الصورة</label>
			<div class="controls">
				<div class="uploader-controls">
					<div class="uploader-preview fileupload-preview thumbnail">
						<img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image">
					</div>
					<div class="uploader-side">
						<button class="btn uploader-button" type="button">إختيار الصورة</button>
						<div class="uploader-file-input">
							<input type="file" accept="image/*" name="image">
						</div>
						<p class="uploader-help" dir="ltr">Maximum size of 1MB. PNG, JPEG, GIF.</p>
					</div>
				</div>
				<br>
				<% if flash[:error] && flash[:errortype] == 'addprize' && flash[:error][:image] %>
					<% flash[:error][:image].each do |er| %>
						<span class="help-block"><%= er %></span>
					<% end %>
				<% end %>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-large btn-primary pull-left">إضافة الجائزة</button> 
			</div>
		</div>
	</fieldset>
</form>