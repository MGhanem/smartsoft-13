<div class="container admin">
	<div class="row">
		<%= render partial: 'sidebar-nav', locals: {active: "list-projects"} %>
		<div class="span9 offset3">
			<div class="tab-content">
				<div class="tab-pane well span7 active" id="admin-list-projects">
					<legend>
						<div class="pull-left pagination">
							<%= paginate @list, :remote => true %>
						</div>
						<a>
							عرض المشارييع
						</a>
					</legend>
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<td>اسم المشروع</td>
							</tr>
						</thead>
						<tbody>
							<% for item in @list %>
								<tr>
									<td><%= item.name %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>