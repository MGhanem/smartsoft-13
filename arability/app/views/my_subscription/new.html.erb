<h2><%= t(:choose_subscription_model) %></h2>
<%= form_for(:my_subscription, :url => { :controller => "my_subscription",:action => "create" }) do |f| %>
<% SubscriptionModel.all.each do |subscription| %>
<p><%= subscription.name %></p><%= radio_button_tag(:my_subscription, subscription.id) %>
<% end %>
<div><%= f.submit t(:done) %></div>
<% end %>

