    <div class="container">
  <div class="control-group"><%= f.label t(:username), :class => "control-label" %>
  <%= f.text_field :username, :placeholder => "اسم المستخدم", :style => "margin-left: 10px;" %></div>

  <div class="control-group"><%= f.label t(:email), :class => "control-label" %>
