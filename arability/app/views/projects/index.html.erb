              <br />
              <strong><%= t(:projects_index_categories)%></strong>
              <% size = project1.categories.length %>
              <% if size == 0 %>
              <%= t(:no_categories) %>
              <% else %>
              <% counter = 1 %>
              <% project1.categories.each do |c| %>
                <% if counter < size %>
                  <%= c.english_name %>,
                  <% counter = counter + 1 %>
                <% else %>
                  <%= c.english_name %>
                <% end %>
              <% end %>
              <% end %>
              <br />
              <strong><%= t(:projects_index_description)%></strong>
              <% if project1.description.size == 0 %>
              <%= t(:no_description) %>
              <% else %>  
              <%= project1.description %>
              <% end %>
  <br />
  <% if I18n.locale == :ar %>
    <a class="btn pull-left" href="/developers/projects/<%= project1.id %>/edit"><i class="icon-edit"></i><%= t(:projects_index_edit)%></a>
  <% else %>
    <a class="btn pull-right" href="/developers/projects/<%= project1.id %>/edit"><i class="icon-edit"></i><%= t(:projects_index_edit)%></a>
  <% end %>
  <br />
            </div>
