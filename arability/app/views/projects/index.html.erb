<h1>Projects</h1>
<br />
<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">My projects</a></li>
    <li><a href="#tab2" data-toggle="tab">Shared projects with me</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <p><a class="btn" href="/projects/new"><i class="icon-plus"></i> New Project</a>
<br />
<% @projects.each do |project| %>
  <div class="boxed">
    <a class="btn" href="/projects/<%= project.id %>/edit"><i class="icon-edit"></i></a>
    <br />
    Name:  <%= link_to project.name, :controller => "projects", :action => "show", :id =>project %>
    <br />
    Categories:  <% project.categories.each do |c| %>
      <%= c.name %>
      <% end %>
    <br />
    <%= project.description %>
    <br />
  <% end %>
</div>