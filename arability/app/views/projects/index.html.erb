  <% else %>
    <a class="btn pull-right" href="/developers/projects/<%= project2.id %>/edit"><i class="icon-edit"></i><%= t(:projects_index_edit)%></a>
  <% end %>
  <br />
                </div>
              </td>
            <%end%>
          </tr>
          <% counter_bigloop = counter_bigloop +2 %>
        <% end %>
      </table>
