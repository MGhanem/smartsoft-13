<h1>Projects</h1>
<br />
<% @projects.each do |project| %>
  <div class="well well-small">
  <strong>Name:</strong>
  <br />
  <%= project.name %>
  <br />
  <strong>Categories:</strong>
  <br />
  <% size = project.categories.length %>
  <% counter = 1 %>
  <% project.categories.each do |c| %>
    <% if counter < size %>
      <%= c.name %>,
      <% counter = counter + 1 %>
    <% else %>
      <%= c.name %>
    <% end %>
  <% end %>
  <br />
  <strong>Description:</strong>
  <br />	
  <%= project.description %>
</div>
<br />
<% end %>