<style>
.radio{
    display:float;
}
</style>
<div class = "container">
    <%= form_for(@project) do |f| %>
    <% if @project.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
        <ul>
            <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <%= f.label :categories %>
        <%= text_field_tag("project[categories]",@project.categories) %> 
    </div><br>
    <div class="radio">
        <%= f.radio_button :formal, 'Formal'%> 
        <%= label :formal, 'Formal' %>
        <%= f.radio_button :formal, 'Slang' %>
        <%= label :slang, 'Slang' %>
        <br>
    </div>
    <div class="field">
        <div class="field">Age Target</div></br>
<!--         <%= f.text_field :minAge %>
        <%= f.label "To" %>
        <%= f.text_field :maxAge %> -->
        <form class="form-inline">
          <input type="text" class="input-small" placeholder="From" value="<%= @minAge %>">
          <input type="text" class="input-small" placeholder="To" value="<%= @maxAge %>">
      </form>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>
<div class="actions">
    <%= f.submit %>
</div>
</div>
<% end %>
