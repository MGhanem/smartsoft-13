$(".autocomplete").typeahead({
  source: fetch_keywords,
  items: 4,
  highlighter: function(item) {
    return item
  }
});
function fetch_keywords(keyword, callback){
  $.post("<%= autocomplete_path %>", { search: keyword }, function(data, _, _){
    callback(data);
  })
}
<% if I18n.locale == :en %>
  $("#search").css("font-size","14px");
<% elsif I18n.locale == :ar %>
  $("#search").css("font-size","18px");
<% end %>